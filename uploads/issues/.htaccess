<IfModule mod_rewrite.c>
    RewriteEngine On

    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [F,L]

    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.+)$ ../../api/secure_file.php?path=uploads/issues/$1 [L,QSA]
</IfModule>

<FilesMatch "^\.">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Deny from all
    </IfModule>
</FilesMatch>
