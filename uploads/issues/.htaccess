Options -Indexes

<IfModule mod_autoindex.c>
    IndexIgnore *
</IfModule>

<IfModule mod_rewrite.c>
    RewriteEngine On

    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [F,L]

    RewriteCond %{REQUEST_URI} ^/([^/]+)/uploads/issues/ [NC]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^(.+)$ /%1/api/secure_file.php?path=uploads/issues/$1 [L,QSA]
</IfModule>

<FilesMatch "^\.">
    Require all denied
</FilesMatch>
